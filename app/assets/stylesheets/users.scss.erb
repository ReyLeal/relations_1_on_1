.user_tag {
  height: 21rem;
  width: 40rem;
  border: solid rgba(128, 128, 128, .20) 0.35rem;
  border-radius: 6px;
  margin: 1rem;
}
.bio {
  color: rgba(255, 255, 255, .75);
  font-size: 115%;
  font-weight: 300;
}
.top-row {
  padding: 1rem;
  background-image: url('https://source.unsplash.com/random');
  box-shadow: 0px 1px 1px -1px;
}

.user_tag img {
  height: 10rem;
  width: 10rem;
  border: solid .5rem white;
  border-radius: 5px;
}
.top-info h4 {
  font-size: 150%;
  font-weight: 400;
  margin-bottom: 0;
  margin-top: 0;

}
.top-info p {
  font-size: 110%;
}

.top-info {
  color: white;
  width: 25rem;
  padding-left: 3.5rem;
}
.bot-row {
  font-size: 2rem;
  padding: 1rem 3rem;
}

.col-md-2 {
  margin: 0;
  text-align: left;
  width: 10rem;
  color: rgba(128, 128, 128, .75);
  font-weight: 200;
  font-size: 90%;
}

.col-md-2 button  {
  margin-left: 3rem;
  margin-top: 1rem;
  height: 3.5rem;
  width: 10rem;
  color: rgba(255, 255, 255, .75);
  font-weight: 200;
  border: none;
  background-color: rgb(48, 156, 255);
  border-radius: 5px;
}
.count {
  text-align: left;
  margin-bottom: 0;
  color: rgba(128, 128, 128, 1);
  font-size: 110%;
  font-weight: 500;
}
